<Window x:Class="Assignment6WPF.wndAddPassenger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndAddPassenger" Height="350" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="10,281,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="14" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="230,281,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="14" Click="btnCancel_Click" />
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="23" Margin="82,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="23" Margin="82,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblFirstName" Content="First Name: " HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblLastName" Content="Last Name: " HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
